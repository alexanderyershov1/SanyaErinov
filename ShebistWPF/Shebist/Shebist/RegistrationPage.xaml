        <Label x:Name="EmailLabel" Content="Почта" HorizontalAlignment="Center" Margin="387,199,381,0" VerticalAlignment="Top" RenderTransformOrigin="0.163,0.577"/>
        <Label x:Name="NameLabel" Content="Имя" HorizontalAlignment="Center" Margin="387,140,391,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
