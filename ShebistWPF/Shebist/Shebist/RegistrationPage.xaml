<Page x:Class="Shebist.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shebist"
      mc:Ignorable="d" 
      Background="White"
      Title="RegistrationPage" Height="426.383" Width="839">

    <Grid>
        <TextBox x:Name="LoginTextBox"
                 TextAlignment="Center"
                 HorizontalAlignment="Center" Height="23" Margin="341,112,339,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordTextBox"
                 TextAlignment="Center"
                 HorizontalAlignment="Center" Height="23" Margin="341,289,339,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="EmailTextBox"
                 TextAlignment="Center"
                 HorizontalAlignment="Center" Height="23" Margin="341,230,339,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NameTextBox"
                 TextAlignment="Center"
                 HorizontalAlignment="Center" Height="23" Margin="341,171,339,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LoginLabel" Content="Логин" HorizontalAlignment="Center" Margin="387,81,380,0" VerticalAlignment="Top"/>
