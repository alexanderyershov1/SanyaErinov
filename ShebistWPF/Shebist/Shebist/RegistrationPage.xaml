        <Label x:Name="RegistrationLabel" Content="Регистрация" HorizontalAlignment="Center" Margin="368,50,365,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Регистрация" HorizontalAlignment="Center" Margin="382,326,381,0" VerticalAlignment="Top" Width="76" Click="RegistrationButton_Click"/>
